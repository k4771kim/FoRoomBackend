<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
		<script language="javascript" type="text/javascript">
			function sendClick() {
				var message1Value = document.getElementById('pushForm')['message1'].value;
				var message2Value = document.getElementById('pushForm')['message2'].value;
				
				if (message1Value == "" || message2Value == "") {
					alert("메시지를 입력해주세요");
				}
				else {
					document.getElementById('pushForm').submit();
				}
			}
		</script>
	</head>
	<body>
		<div class="row">
			<div class="col-xs-12 col-md-12"><h3><strong> 푸시 메세지  </strong></h3></div>
		</div>
		<br><br>
		<div class="row">
			<div class="col-xs-12 col-md-12">
				<form method="POST" action="/admin/sendpush" class="form-horizontal" id="pushForm">
					<div class="form-group">
						<label class="col-sm-2 control-label">푸시 대상 선택</label>
						<div class="col-sm-8">
							<select class="form-control" id="target" name="target">

							  <option>ALL</option>
							  <% for (var item in user) { %>
							  	<option value = <%= user[item].usr_registrationid%>><%= user[item].usr_id + "_" + user[item].usr_name %>
							  <% } %>

							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">푸시 타이틀</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="message1" name="message1" >
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">푸시 메시지</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="message2" name="message2">
						</div>
					</div>
					<br><br>
					<div class="form-group">
						<div class="text-center">
							<input type="button" class="btn btn-primary btn-lg" value="보내기" onclick="sendClick()">
						</div>
					</div>
				</form>
			</div>
		</div>
	</body>
</html>
<br><br>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <form method="POST" action="/mgz/update/" class="form-horizontal" id="addForm" enctype="multipart/form-data">
            <input type="hidden" name="before_usevr" value="<%= mgz.mgz_usevr %>"/>
            <input type="hidden" name="mgz_id" value="<%= mgz.mgz_id %>"/>
            <div class="form-group">
                <label class="col-sm-2 control-label">시리즈</label>
                <div class="col-sm-8">
                    <select class="form-control" id="series" name="series">
                        <% var series = mgz.mgz_series %>
                        <% for(var i = 1 ; i <= 5  ; i++){ %>

                        <% if(series == i){ %>
                        <option selected="selected"><%= i %></option>
                        <% } else{ %>
                        <option><%= i %></option>
                        <% } %>
                        <% } %>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">타이틀</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="title" name="title" value="<%= mgz.mgz_title %>">
                </div>
                <label class="col-sm-1 control-label">타이틀 이미지</label>
                <div class="col-sm-4">
                    <input type="file" id="titlepic" name="titlepic">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">가상현실 사용여부</label>
                <div class="col-sm-4">
                    <select class="form-control" id="usevr" name="usevr">
                        <% if(mgz.mgz_usevr == "true"){ %>
                        <option value=true selected="selected">Yes</option>
                        <option value=false>No</option>
                        <% }else{ %>

                        <option value=true>Yes</option>
                        <option value=false selected="selected">No</option>
                        <% } %>
                    </select>
                </div>
                <label id="kbg" class="col-sm-1 control-label">가상현실 이미지</label>
                <div class="col-sm-4">
                    <input type="file" id="vrpic" name="vrpic">
                </div>
            </div>

            <br><br><br><br><br>
            <h4>내용은 순서대로 채워주세요</h4>
            <br>
            <div class="form-group">

                <label class="col-sm-2 control-label">
                    내용1
                </label>
                <div class="col-sm-4">
                    <textarea cols="60" rows="5" id="text1" name="text1"><%= mgz.mgz_text1 %></textarea>
                </div>
                <label class="col-sm-1 control-label">내용1 이미지</label>
                <div class="col-sm-4">
                    <input type="file" id="pic1" name="pic1">
                </div>
            </div>

            <% if(mgz.mgz_text2 != null){ %>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    내용2
                </label>
                <div class="col-sm-4">
                    <textarea cols="60" rows="5" id="text2" name="text2"><%= mgz.mgz_text2 %></textarea>
                </div>
                <label class="col-sm-1 control-label">내용2 이미지</label>
                <div class="col-sm-4">
                    <input type="file" id="pic2" name="pic2">
                </div>
            </div>
            <% } %>

            <% if(mgz.mgz_text3 != null){ %>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    내용3
                </label>
                <div class="col-sm-4">
                    <textarea cols="60" rows="5" id="text3" name="text3"><%= mgz.mgz_text3 %></textarea>
                </div>
                <label class="col-sm-1 control-label">내용3 이미지</label>
                <div class="col-sm-4">
                    <input type="file" id="pic3" name="pic3">
                </div>
            </div>
            <% } %>

            <% if(mgz.mgz_text4 != null){ %>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    내용4
                </label>

                <div class="col-sm-4">
                    <textarea cols="60" rows="5" id="text4" name="text4"><%= mgz.mgz_text4 %></textarea>
                </div>
                <label class="col-sm-1 control-label">내용4 이미지</label>
                <div class="col-sm-4">
                    <input type="file" id="pic4" name="pic4">
                </div>
            </div>
            <% } %>

            <% if(mgz.mgz_text5 != null){ %>

            <div class="form-group">
                <label class="col-sm-2 control-label">

                    내용5
                </label>
                <div class="col-sm-4">
                    <textarea cols="60" rows="5" id="text5" name="text5"><%= mgz.mgz_text5 %></textarea>
                </div>
                <label class="col-sm-1 control-label">내용5 이미지</label>
                <div class="col-sm-4">
                    <input type="file" id="pic5" name="pic5">
                </div>
            </div>

            <% } %>

